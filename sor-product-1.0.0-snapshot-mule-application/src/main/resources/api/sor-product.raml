#%RAML 1.0
title: sor-product

version: v1.0
  
types:
  product:
    properties:
      identifier?: string
      brand: string
      model: string
      rating: number
      description?: string
      pictures: string[]
      price: price
  
  price:
    properties:
      amount: amount
      salesUnit: salesUnit
      
  amount:
    properties:
      currency: string
      currencyValue: number
      name : string
  
  salesUnit:
    properties:
      code: string
      name: string
      
  category:
    properties:
      identifier: string
      name: string
      description: string    
      
  variant: 
    properties:
      identifier: string
      productId: string
      identifiers: identifiers
      pictures: string[]
      configuration : configuration[]
  
  Identifier:
    type: string
    pattern: ^[0-9A-Za-z-]+
    minLength: 3
    maxLength: 36

  IdentifierMap:
    type: object
    properties:
      /[0-9A-Z-]+/:
        type: Identifier
  
  identifiers:
        type: IdentifierMap
        properties:
          SKU?: Identifier
          PLU?: Identifier
          GTIN-12?: Identifier
          GTIN-13?: Identifier
          GTIN-8?: Identifier
          UPC?: Identifier
          UCC-12?: Identifier
          EAN?: Identifier
          JAN?: Identifier
          EAN-13?: Identifier
          EAN-8?: Identifier    
      
  configuration:
    properties:
      characteristic: characteristic
      characteristicValue: characteristicValue
      
  characteristic:
    properties:
      code: string
      description: string
      name: string
    
  characteristicValue:
    properties:
      code: string
      name: string
    
  products: 
    properties:
      products: product[]
      
  categories:    
    properties:
      categories: category[]
      
  variants: 
    properties:
      variants: variant[]
      
